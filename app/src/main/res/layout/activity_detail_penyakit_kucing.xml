<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".detailPenyakitKucing"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            tools:ignore="MissingConstraints"
            android:background="@drawable/button"
            >

            <ImageView
                android:id="@+id/logo"
                android:layout_centerHorizontal="true"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/spiderman"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_centerHorizontal="true"
                android:text="Detail Penyakit"
                android:textColor="@color/black"
                android:textSize="20sp"
                />
        </RelativeLayout>

        <TextView
        android:id="@+id/textNama"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textSize="18dp"
        android:textColor="@color/black"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relative" />
        <RelativeLayout
            android:id="@+id/relativeNama"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/textNama"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/button"
            >

            <TextView
                android:id="@+id/namaPenyakit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scabies"
                android:textColor="@color/black"
                android:layout_centerInParent="true"

                />

        </RelativeLayout>
        <TextView
            android:id="@+id/textDeskripsi"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi"
            android:textSize="18dp"
            android:textColor="@color/black"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeNama" />
        <RelativeLayout
            android:id="@+id/relativeDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textDeskripsi"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/button"
            >
            <TextView
                android:id="@+id/deskripsiPenyakit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:text="Scabies atau kudis ini disebabkan oleh tungu kecil yang bernama notodes coti. Tungau ini mirip dengan tungau sarcoptic yang menyebabkan scabies"
                android:textColor="@color/black"
                android:layout_marginLeft="17dp"
                android:layout_centerInParent="true"

                />

        </RelativeLayout>
        <TextView
            android:id="@+id/textGejala"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gejala"
            android:textSize="18dp"
            android:textColor="@color/black"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeDeskripsi" />
        <RelativeLayout
            android:id="@+id/relativeGejala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textGejala"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/button"
            >
            <TextView
                android:id="@+id/gejalaPenyakit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:text="Scabies atau kudis ini disebabkan oleh tungu kecil yang bernama notodes coti. Tungau ini mirip dengan tungau sarcoptic yang menyebabkan scabies"
                android:textColor="@color/black"
                android:layout_marginLeft="17dp"
                android:layout_centerInParent="true"

                />
        </RelativeLayout>
        <TextView
            android:id="@+id/textPenyebab"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penyebab"
            android:textSize="18dp"
            android:textColor="@color/black"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeGejala" />
        <RelativeLayout
            android:id="@+id/relativePenyebab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textPenyebab"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/button"
            >
            <TextView
                android:id="@+id/penyebabPenyakit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:text="Scabies atau kudis ini disebabkan oleh tungu kecil yang bernama notodes coti. Tungau ini mirip dengan tungau sarcoptic yang menyebabkan scabies"
                android:textColor="@color/black"
                android:layout_marginLeft="17dp"
                android:layout_centerInParent="true"

                />
        </RelativeLayout>
        <TextView
            android:id="@+id/textSolusi"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solusi"
            android:textSize="18dp"
            android:textColor="@color/black"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativePenyebab" />
        <RelativeLayout
            android:id="@+id/relativeSolusi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textSolusi"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/button"
            >
            <TextView
                android:id="@+id/solusiPenyakit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:text="Scabies atau kudis ini disebabkan oleh tungu kecil yang bernama notodes coti. Tungau ini mirip dengan tungau sarcoptic yang menyebabkan scabies"
                android:textColor="@color/black"
                android:layout_marginLeft="17dp"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>